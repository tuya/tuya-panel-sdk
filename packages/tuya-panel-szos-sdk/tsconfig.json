{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["*"]
    },
    "allowJs": true,
    "jsx":"react",
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "experimentalDecorators": true, // 与 allowjs冲突
    "outDir": "./lib",
    "sourceMap": true,
    "skipLibCheck": true,
    // "allowUnreachableCode": true,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "typeRoots": ["./@types/"]
  },
  "include": [
    "./src/**/*",
    "./src/res/*",
    "@types/index.d.ts"
  ],
  "exclude": [
    "**/__tests__/*",
    "./node_modules",
    "./node_modules/@types/",
  ]
}