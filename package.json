{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "@commitlint/cli": "^11.0.0",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.56",
    "@types/react-native": "^0.63.35",
    "@types/tuya-panel-kit": "^2.0.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.2",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint-config-tuya-panel": "^0.2.3",
    "eslint-plugin-literal-check": "^0.1.2",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "metro-react-native-babel-preset": "^0.64.0",
    "react": "16.8.3",
    "react-native": "0.59.10",
    "react-native-mock-render": "^0.1.9",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "react": "16.8.3",
    "react-native": "0.59.10",
    "react-native-svg": "5.5.1",
    "tuya-panel-kit": "4.0.0-rc.1"
  },
  "scripts": {
    "release:pre": "lerna publish --canary --yes --pre-dist-tag=rc --preid=rc",
    "release:prepatch": "lerna publish --canary patch --yes --pre-dist-tag=rc --preid=rc",
    "release:preminor": "lerna publish --canary --yes --pre-dist-tag=rc --preid=rc",
    "release:premajor": "lerna publish --canary --yes --pre-dist-tag=rc --preid=rc",
    "release": "lerna publish",
    "release:patch": "lerna publish patch",
    "release:minor": "lerna publish minor",
    "release:major": "lerna publish major",
    "release:next": "lerna publish prerelease --pre-dist-tag=next --preid=next",
    "release:nextpatch": "lerna publish prepatch --pre-dist-tag=next --preid=next",
    "release:nextminor": "lerna publish preminor --pre-dist-tag=next --preid=next",
    "release:nextmajor": "lerna publish premajor --pre-dist-tag=next --preid=next",
    "commit": "git cz",
    "test": "jest",
    "lint": "eslint packages --ext .js,.jsx,.ts,.tsx --fix --ignore-path .eslintignore",
    "format": "prettier --write packages/**/*/*.{js,jsx,ts,tsx}",
    "sync:github": "./scripts/sync-from-github.sh",
    "sync": "./scripts/sync.sh",
    "build": "lerna run build --parallel",
    "build:robot": "lerna run build --parallel --scope tuya-panel-robot-sdk"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add ."
    ],
    "**/*.{md,json}": [
      "prettier --write",
      "git add ."
    ]
  }
}
