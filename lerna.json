{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public",
      "registry": "https://registry.npmjs.org"
    },
    "ignoreChanges": ["ignored-file", "**/docs/**", "**/*.md"],
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
